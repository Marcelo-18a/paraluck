<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Usuários</title>
</head>
<body>
  <h1>Lista de Usuários</h1>
  
  <table border="1">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Idade</th>
        <th>Data de Nascimento</th>
        <th>Perfil de Acesso</th>
        <th>Ativação</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(function(usuario) { %>
        <tr>
          <td><%= usuario.Nome_Usuario %></td>
          <td><%= usuario.Idade_Usuario %></td>
          <td><%= new Date(usuario.Data_Nascimento_Usuario).toLocaleDateString() %></td>
          <td><%= usuario.Perfil_Acesso %></td>
          <td><%= usuario.Ativacao_Usuarios ? "Ativo" : "Inativo" %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
